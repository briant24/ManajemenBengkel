<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <Button
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginHorizontal="20dp"
        android:layout_marginVertical="135dp"
        app:layout_constraintRight_toRightOf="parent"
        android:id="@+id/btnBayar"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:focusable="false"
        android:background="@drawable/custom_button"
        android:text="BAYAR SEKARANG"/>

    <LinearLayout
        android:background="@drawable/linear_border"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        android:orientation="vertical">
        <TextView
            android:id="@+id/textView99"
            android:layout_margin="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="NAMA CUSTOMER"
            android:textSize="10sp"
            android:textColor="@color/black"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/tvNama5"
            android:layout_width="match_parent"
            android:layout_marginHorizontal="5dp"
            android:textColor="@color/black"
            android:textSize="15sp"
            android:layout_height="wrap_content"
            android:text="" />

        <TextView
            android:id="@+id/textView98"
            android:layout_margin="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="MOTOR CUSTOMER"
            android:textSize="10sp"
            android:textColor="@color/black"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/tvMotor5"
            android:layout_width="match_parent"
            android:layout_marginHorizontal="5dp"
            android:textColor="@color/black"
            android:textSize="15sp"
            android:layout_height="wrap_content"
            android:text="" />

        <TextView
            android:id="@+id/textView97"
            android:layout_margin="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="NOMOR POLISI"
            android:textSize="10sp"
            android:textColor="@color/black"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/tvNopol5"
            android:layout_width="match_parent"
            android:layout_marginHorizontal="5dp"
            android:textSize="15sp"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:text="" />

        <TextView
            android:id="@+id/textView96"
            android:layout_margin="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="STATUS PEMBAYARAN"
            android:textSize="10sp"
            android:textColor="@color/black"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/tvBayar5"
            android:layout_width="match_parent"
            android:layout_marginHorizontal="5dp"
            android:textSize="15sp"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:text="" />

        <TextView
            android:id="@+id/textView95"
            android:layout_margin="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="JUMLAH"
            android:textSize="10sp"
            android:textColor="@color/black"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/tvJumlah5"
            android:layout_width="match_parent"
            android:layout_marginHorizontal="5dp"
            android:textSize="15sp"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:text="" />

        <TextView
            android:id="@+id/textView94"
            android:layout_margin="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Tanggal"
            android:textSize="10sp"
            android:textColor="@color/black"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/tvTanggal5"
            android:layout_width="match_parent"
            android:layout_marginHorizontal="5dp"
            android:textSize="15sp"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:text="" />

        <TextView
            android:id="@+id/textView93"
            android:layout_margin="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Nama Teknisi"
            android:textSize="10sp"
            android:textColor="@color/black"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/tvNamaTeknisi5"
            android:layout_width="match_parent"
            android:layout_marginHorizontal="5dp"
            android:textSize="15sp"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:text="" />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>