<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/background2"
    tools:context=".CustFragment">

    <ImageView
        android:id="@+id/imageView4"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:layout_marginTop="40dp"
        android:src="@drawable/pict" />

    <TextView
        app:layout_constraintTop_toBottomOf="@id/imageView4"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:id="@+id/tvdtdrcust"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="30sp"
        android:textStyle="bold"
        android:textAlignment="center"
        android:layout_marginHorizontal="30dp"
        android:textColor="@color/black"
        android:text="Data Diri Customer" />

    <EditText
        android:id="@+id/etNamaCust"
        android:layout_marginHorizontal="40dp"
        android:layout_marginVertical="30dp"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        app:layout_constraintTop_toBottomOf="@id/tvdtdrcust"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:background="@drawable/custom_input"
        android:drawableStart="@drawable/custom_ic_nama"
        android:drawablePadding="10dp"
        android:ems="10"
        android:hint="Nama Customer"
        android:inputType="textPersonName"
        android:paddingStart="15dp"
        android:textColor="@color/darker_gray"
        android:textColorHint="@color/darker_gray" />

    <EditText
        android:id="@+id/etMotorCust"
        android:layout_marginHorizontal="40dp"
        android:layout_marginVertical="30dp"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        app:layout_constraintTop_toBottomOf="@id/etNamaCust"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:background="@drawable/custom_input"
        android:drawableStart="@drawable/custom_ic_username"
        android:drawablePadding="10dp"
        android:ems="10"
        android:hint="Kendaraan"
        android:inputType="textPersonName"
        android:paddingStart="15dp"
        android:textColor="@color/darker_gray"
        android:textColorHint="@color/darker_gray" />

    <EditText
        android:id="@+id/etNopolCust"
        android:layout_marginHorizontal="40dp"
        android:layout_marginVertical="30dp"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        app:layout_constraintTop_toBottomOf="@id/etMotorCust"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:background="@drawable/custom_input"
        android:drawableStart="@drawable/custom_ic_username"
        android:drawablePadding="10dp"
        android:ems="10"
        android:hint="Nomor Polisi"
        android:inputType="textPersonName"
        android:paddingStart="15dp"
        android:textColor="@color/darker_gray"
        android:textColorHint="@color/darker_gray" />

    <Spinner
        android:id="@+id/spinnerBayar"
        android:layout_marginHorizontal="40dp"
        android:layout_marginVertical="30dp"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        app:layout_constraintTop_toBottomOf="@id/etNopolCust"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:background="@drawable/custom_spinner"
        android:textAlignment="center" />

    <Button
        android:id="@+id/btnNext"
        app:layout_constraintTop_toBottomOf="@id/spinnerBayar"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginVertical="30dp"
        android:background="@drawable/custom_button"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:text=" Selanjutnya " />

</androidx.constraintlayout.widget.ConstraintLayout>