<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <LinearLayout
        android:background="@drawable/linear_border"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        android:orientation="vertical">
        <TextView
            android:id="@+id/textView2"
            android:layout_margin="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="NAMA CUSTOMER"
            android:textSize="10sp"
            android:textColor="@color/black"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/tvNama3"
            android:layout_width="match_parent"
            android:layout_marginHorizontal="5dp"
            android:textColor="@color/black"
            android:textSize="15sp"
            android:layout_height="wrap_content"
            android:text="" />

        <TextView
            android:id="@+id/textView4"
            android:layout_margin="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="MOTOR CUSTOMER"
            android:textSize="10sp"
            android:textColor="@color/black"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/tvMotor3"
            android:layout_width="match_parent"
            android:layout_marginHorizontal="5dp"
            android:textColor="@color/black"
            android:textSize="15sp"
            android:layout_height="wrap_content"
            android:text="" />

        <TextView
            android:id="@+id/textView5"
            android:layout_margin="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="NOMOR POLISI"
            android:textSize="10sp"
            android:textColor="@color/black"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/tvNopol3"
            android:layout_width="match_parent"
            android:layout_marginHorizontal="5dp"
            android:textSize="15sp"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:text="" />

        <TextView
            android:id="@+id/textView6"
            android:layout_margin="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="STATUS PEMBAYARAN"
            android:textSize="10sp"
            android:textColor="@color/black"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/tvBayar3"
            android:layout_width="match_parent"
            android:layout_marginHorizontal="5dp"
            android:textSize="15sp"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:text="" />

        <TextView
            android:id="@+id/textView7"
            android:layout_margin="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="JUMLAH"
            android:textSize="10sp"
            android:textColor="@color/black"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/tvJumlah3"
            android:layout_width="match_parent"
            android:layout_marginHorizontal="5dp"
            android:textSize="15sp"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:text="" />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>