<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/background"
    tools:context=".teknisi.ConfirmTransFragment">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical">
        <EditText
            android:id="@+id/etBiayaBarang"
            android:background="@drawable/custom_input2"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginVertical="15dp"
            android:layout_marginHorizontal="40dp"
            android:ems="10"
            android:textColor="@color/darker_gray"
            android:textColorHint="@color/darker_gray"
            android:inputType="number"
            android:textAlignment="center"
            android:hint="Biaya Barang" />

        <EditText
            android:id="@+id/etBiayaJasa"
            android:background="@drawable/custom_input2"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginVertical="15dp"
            android:layout_marginHorizontal="40dp"
            android:ems="10"
            android:textColor="@color/darker_gray"
            android:textColorHint="@color/darker_gray"
            android:inputType="number"
            android:textAlignment="center"
            android:hint="Biaya Jasa" />
        <LinearLayout
            android:layout_marginTop="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <Button
                android:background="@drawable/custom_button"
                android:id="@+id/btnKembali"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="3dp"
                android:text="Kembali" />
            <Button
                android:background="@drawable/custom_button"
                android:layout_marginLeft="2dp"
                android:id="@+id/btnKonfirm"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:text="Selanjutnya" />
        </LinearLayout>
    </LinearLayout>
</FrameLayout>