<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    tools:context=".RegisterActivity">

    <TextView
        android:id="@+id/register"
        android:layout_width="match_parent"
        android:textSize="40dp"
        android:fontFamily="sans-serif-condensed"
        android:padding="20dp"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:gravity="center"
        android:layout_height="wrap_content"
        android:text="Register" />

    <EditText
        android:id="@+id/etNamaReg"
        android:background="@drawable/custom_input"
        android:layout_below="@id/register"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginVertical="15dp"
        android:layout_marginHorizontal="40dp"
        android:ems="10"
        android:textColor="@color/darker_gray"
        android:textColorHint="@color/darker_gray"
        android:inputType="textPersonName"
        android:drawableStart="@drawable/custom_ic_nama"
        android:drawablePadding="10dp"
        android:paddingStart="15dp"
        android:hint="Nama" />

    <EditText
        android:id="@+id/etUserReg"
        android:background="@drawable/custom_input"
        android:layout_below="@id/etNamaReg"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginVertical="15dp"
        android:layout_marginHorizontal="40dp"
        android:ems="10"
        android:textColor="@color/darker_gray"
        android:textColorHint="@color/darker_gray"
        android:inputType="textPersonName"
        android:drawableStart="@drawable/custom_ic_username"
        android:drawablePadding="10dp"
        android:paddingStart="15dp"
        android:hint="Username" />

    <EditText
        android:id="@+id/etPasswordReg"
        android:background="@drawable/custom_input"
        android:layout_below="@id/etUserReg"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginVertical="15dp"
        android:layout_marginHorizontal="40dp"
        android:ems="10"
        android:textColor="@color/darker_gray"
        android:textColorHint="@color/darker_gray"
        android:inputType="textPassword"
        android:drawableStart="@drawable/custom_ic_password"
        android:drawablePadding="10dp"
        android:paddingStart="15dp"
        android:hint="Password" />

    <Spinner
        android:id="@+id/spinner"
        android:background="@drawable/custom_spinner"
        android:layout_below="@id/etPasswordReg"
        android:layout_marginHorizontal="40dp"
        android:textAlignment="center"
        android:layout_centerHorizontal="true"
        android:layout_margin="15dp"
        android:layout_width="320dp"
        android:layout_height="wrap_content" />

    <Button
        android:id="@+id/btnReg"
        android:layout_below="@id/spinner"
        android:background="@drawable/custom_button"
        android:layout_centerHorizontal="true"
        android:textStyle="bold"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:text="REGISTER" />

</RelativeLayout>