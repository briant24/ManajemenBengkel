<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    tools:context=".RegisterActivity">

    <TextView
        android:id="@+id/register"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/imageView"
        android:fontFamily="sans-serif-condensed"
        android:gravity="center"
        android:paddingBottom="20dp"
        android:text="Register"
        android:textColor="@color/black"
        android:textSize="40dp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/etNamaReg"
        android:background="@drawable/custom_input"
        android:layout_below="@id/register"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginVertical="15dp"
        android:layout_marginHorizontal="40dp"
        android:ems="10"
        android:textColor="@color/darker_gray"
        android:textColorHint="@color/darker_gray"
        android:inputType="textPersonName"
        android:drawableStart="@drawable/custom_ic_nama"
        android:drawablePadding="10dp"
        android:paddingStart="15dp"
        android:hint="Nama" />

    <EditText
        android:id="@+id/etUserReg"
        android:background="@drawable/custom_input"
        android:layout_below="@id/etNamaReg"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginVertical="15dp"
        android:layout_marginHorizontal="40dp"
        android:ems="10"
        android:textColor="@color/darker_gray"
        android:textColorHint="@color/darker_gray"
        android:inputType="textPersonName"
        android:drawableStart="@drawable/custom_ic_username"
        android:drawablePadding="10dp"
        android:paddingStart="15dp"
        android:hint="Username" />

    <EditText
        android:id="@+id/etPasswordReg"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@id/etUserReg"
        android:layout_marginHorizontal="40dp"
        android:layout_marginVertical="15dp"
        android:background="@drawable/custom_input"
        android:drawableStart="@drawable/custom_ic_password"
        android:drawablePadding="10dp"
        android:ems="10"
        android:hint="Password"
        android:inputType="textPassword"
        android:paddingStart="15dp"
        android:textColor="@color/darker_gray"
        android:textColorHint="@color/darker_gray" />

    <Spinner
        android:id="@+id/spinner"
        android:background="@drawable/custom_spinner"
        android:layout_below="@id/etPasswordReg"
        android:layout_marginHorizontal="40dp"
        android:textAlignment="center"
        android:layout_centerHorizontal="true"
        android:layout_margin="15dp"
        android:layout_width="320dp"
        android:layout_height="wrap_content" />

    <Button
        android:id="@+id/btnReg"
        android:layout_below="@id/spinner"
        android:background="@drawable/custom_button"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:textStyle="bold"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:textAlignment="center"
        android:text="REGISTER" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_marginTop="25dp"
        app:srcCompat="@drawable/pict" />

    <TextView
        android:layout_centerHorizontal="true"
        android:id="@+id/textView7"
        android:paddingTop="15dp"
        android:layout_below="@id/btnReg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/darker_gray"
        android:text="Sudah punya akun? " />

    <TextView
        android:id="@+id/textView8"
        android:paddingTop="5dp"
        android:layout_centerHorizontal="true"
        android:textStyle="bold"
        android:clickable="true"
        android:onClick="btnLogin"
        android:layout_below="@id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/accent_apk"
        android:text="@string/loginbtn" />

</RelativeLayout>